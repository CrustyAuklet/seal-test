{
  "version": "0.2.1",
  "defaults": {},
  "configurations": [
    {
      "type": "cppdbg",
      "name": "SAML21G18B-Debug",
      "project": "CMakeLists.txt",
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}\\CMakeBuilds\\build\\${name}\\TestSeal.elf",
      "MIMode": "gdb",
      "externalConsole": true,
      "inheritEnvironments": [ "gcc_arm"  ],
      "miDebuggerPath": "C:\\GNUToolsARMEmbedded\\8.2.1-1.2-20190119-1237\\bin\\arm-none-eabi-gdb.exe",
      "setupCommands": [
        {
          "text": "Documentation: Learn how to configure embedded debugging",
          "description": "See here for more info http://aka.ms/vsembeddeddebug",
          "ignoreFailures": true
        },
        {
          "text": "-environment-cd ${workspaceRoot}/BUILD"
        },
        {
          "text": "-file-exec-and-symbols ${workspaceRootFolderName}.elf",
          "description": "load file",
          "ignoreFailures": false
        },
        {
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "visualizerFile": "${debugInfo.linuxNatvisPath}",
      "showDisplayString": true,
      "miDebuggerServerAddress": "localhost:2331",
      "launchCompleteCommand": "None",
      "debugServerPath": "C:\\Program Files (x86)\\SEGGER\\JLink_V620h\\JLinkGDBServer.exe",
      "debugServerArgs": "-select USB -device ATSAML21G18B -if SWD -speed 4000 -ir",
      "serverStarted": "GDB\\ server\\ started",
      "filterStderr": true,
      "filterStdout": true
    }
  ]
}
